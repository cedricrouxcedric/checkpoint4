{% extends 'base.html.twig' %}

{% block title %}Performance{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
<h1 class="text-center">{{ performance.name }}</h1>
<div class="results">
    <div class="card flex-column ">
        {% if is_granted('ROLE_ADMIN') %}<div class="text-center " >{{ include('performance/_delete_form.html.twig') }}</div>{% endif %}
        <div class="card-body">
            <img class="card-img-top tinypict " src="{{ performance.picture }}" alt="Card image cap">
            <h5 class="text-center">{{ (performance.type.name) }}</h5>
            <a href="{{ path('performance_show', {'id': performance.id }) }}" class="btn btn-light">show</a>
            {% if is_granted('ROLE_ADMIN') %}  <a href="{{ path('performance_edit', {'id': performance.id}) }}">edit</a>{% endif %}
        </div>
        <div class="text-center"><a  href="{{ path('performance_index') }}">back to list</a></div>
    </div>
</div>
{% endblock %}



